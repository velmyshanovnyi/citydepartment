mainFont = 'casper_boldregular', Arial, sans-serif
*
	box-sizing border-box
html
	height 100%
html
body
	position relative
	background-color #fff
	margin 0
	height 100%
	overflow hidden
	.order-active
		.sidebar
			display none
		.sidebar-order
			display block
			&:before
				background-image url(../images/darck-bg-shadow.png)
::-webkit-input-placeholder
	font-family mainFont
	font-size 0.8em 
	color #f72c36 !important
	line-height 1.5em
:-moz-placeholder
	font-family mainFont
	font-size 0.8em 
	color #f72c36 !important
	line-height 1.5em
:-ms-input-placeholder
	font-family mainFont
	font-size 0.8em  
	color #f72c36 !important
	line-height 1.5em			
body
	font-family mainFont
	font-weight normal
	font-size 1em
// helper classes
.text-center
	text-align center
	margin 0
.sr-only
	position absolute
	width 1px
	height 1px
	padding 0
	margin -1px
	overflow hidden
	clip rect(0,0,0,0)
	border 0
.blue
	color #1ca0fd
.yellow
	color #ffd824
.red
	color #f72c36
.header
	text-align center
	height 40px
	background-color #101010
	padding 0 15px
	position fixed
	width 100%
	&__lang
		text-decoration none
		text-transform uppercase
		font-size 0.9em
		float left
		padding 12px 15px 12px 0
.menu
	list-style none
	display inline-block
	padding 0
	margin 0
	float left
	&__item
		padding 0 5px
		border-right 1px solid #171717
		display inline-block
		vertical-align middle
		text-align left
		&:before
			content ""
			display block
			float left
			background-image url(../images/icons.png)
			background-size 120px 240px
			padding-right 5px
			margin-top 5px
		&.first-child
			border-left 1px solid #171717
			line-height 1
			span
				margin-top -3px
				display block
		a 
			padding 8px 0
			display inline-block
			font-size 0.8em
			color #6fb2ed
			text-decoration none
			&:hover
				color #4993d4
	.icon
		&__map
			&:before
				width 20px 
				height 24px
				background-position 0 0
		&__cctv
			&:before
				width 24px 
				height 24px
				background-position -23px -2px
		&__cop
			&:before
				width 24px 
				height 24px
				background-position -48px -2px
		&__light
			&:before
				width 20px 
				height 24px
				background-position -74px -2px			
.map-box
	width 100%
	height 100%
	padding-right 260px
	padding-top 40px
.sidebar-order
.sidebar
	z-index 2
	text-align center
	background-color #171717
	position absolute
	top 0
	right 0
	height 100%
	width 260px
	&__close
		background-image url(../images/icons.png)
		background-size 120px 240px
		background-position -3px -221px
		width 18px
		height 18px
		float right
		margin-top -10px
	&__title
		color #f72c36
		z-index 10
		position relative
		font-size 1.20em
	&__content
		overflow-y auto
		padding 20px 10px 0 15px
		color #fff
		text-align left
		h2
			font-size 0.9em
			margin 10px 0
			position relative
			z-index 5
			position relative
			cursor pointer
			&.collapse__title
				&:after
					content ""
					display inline-block
					vertical-align middle
					width 0
					height 0
					margin-left 5px
					border-left 5px solid transparent
					border-right 5px solid transparent
					border-top 5px solid #fff		
	&:before
		content ""
		position absolute
		top 3px
		right 0
		background-image url(../images/darck-bg.png)
		background-size 300px 70px
		width 300px
		height 70px
	&__button
		&-order
			background-image url(../images/button.jpg)
			background-repeat no-repeat
			background-color transparent
			border 0 none
			background-size 100%
			display inline-block
			width 215px
			height 52px
			z-index 100
			position relative
			margin-top 5px
			cursor pointer
			outline none
			&.button_shadow
				background-image url(../images/button.png)
				margin 15px auto 0
				display block
		&-search
			background-image url(../images/search-button.jpg)
			background-repeat no-repeat
			background-color transparent
			border 0 none
			background-size 100%
			display block
			width 88px
			height 32px
			cursor pointer
			outline none
			margin 10px auto 30px
	textarea
		resize none
		min-height 60px
		font-size 0.8em
	textarea
	input
		border 0 none
		border-left 1px solid #f72c36
		background-color transparent
		width 100%
		padding 0 0 0 10px
		outline none
		color #f72c36 !important
		cursor pointer
	input
		border 0 none
		text-align center
	.user-order
		text-align center
		h2
			text-align left
		&__adress
			display inline-block
			padding-bottom 3px
			margin-bottom 5px
			border-bottom 1px solid #f72c36
		&__lastname
		&__adress
			font-size 1.2em
			margin-bottom 5px
		&__name 
			font-size 0.9em
		&__phone
			font-style italic
			font-size 1em
			margin 5px 0 5px
		&__time
			font-size 2em
			max-height 45px
		&__date
			font-size 1em
			margin-bottom 5px
		label
			display inline-block
			font-size 0.7em
			color #f72c36
			opacity 0.7
.sidebar-order
	display none
	box-shadow inset 9px 0px 72px 1px rgba(255,0,0,0.2)
	&:before
		background-size 260px 67px
		width 260px
		height 67px
	h2
		&.collapse__title
			&:after
				border-top 5px solid #f72c36
.logo
	position absolute
	top 0
	left 50%
	margin 0 0 0 -125px
	width 250px
	display inline-block
	text-align center
	background-image url(../images/logo-bg.png)
	background-size 250px 65px
	background-repeat no-repeat
	&__image
		width 150px
.districts
.kinds
	&__items
		text-align left
		font-size 10px
		padding 0 15px 0 5px
		color #7d7d7d
.districts
	&__items
		margin-top -20px
.districts
	position relative
	&__list
		list-style none
		position absolute
		top 0
		padding 0
		width 100%
		height 100%
		overflow hidden
	img 
		width 225px
		margin-top -30px
	&__item
		width 20px
		height 20px
		border-radius 100%
		border 3px solid #fff
		cursor pointer
		&.first
			position absolute
			top 40px 
			left 50%
		&.second
			position absolute
			top 80px 
			left 50px
		&.third
			position absolute
			top 80px 
			left 50px
		&.third
			position absolute
			top 105px 
			left 95px
		&.fourth
			position absolute
			top 70px 
			left 150px
		&.fifth
			position absolute
			top 125px 
			left 130px
		&.active
			&:before
				content ""
				background-image url(../images/icons.png)
				background-size 120px 240px
				background-position -101px -4px
				width 20px
				height 20px
				display inline-block			
.kinds
	padding 0
	margin 0 -5px
	text-align center
	&-big 
		.kinds__item
			width 40%
	&__item
		position relative
		width 22%
		display inline-block
		vertical-align top
		font-size 9px
		text-align center
		cursor pointer
		color #fff
		&.active
			&:before
				content ""
				position absolute
				top 25px
				right 0
				background-image url(../images/icons.png)
				background-size 120px 240px
				background-position -98px -2px
				width 22px
				height 24px
				display inline-block
	&__title
		vertical-align middle
		display inline-block
		line-height 1
	&__image
		width 37px 
		height 37px
		margin 0 auto
		display block
		background-image url(../images/icons.png)
		background-size 120px 240px
		&.drugs
			background-position -3px -27px
		&.fraud
			background-position -43px -27px
		&.fire
			background-position -81px -27px
		&.property
			background-position -4px -67px
		&.embezzlement
			background-position -43px -67px
		&.theft
			background-position -83px -67px
		&.extortion
			background-position -4px -108px
		&.rape
			background-position -43px -107px
		&.looting
			background-position -83px -107px
		&.brigandage
			background-position -3px -147px
		&.web
			background-position -83px -147px
		&.police
			background-position -45px -147px
.data-kinds
	&__items 
		color #f72c36
		font-size 0.8em
	.kinds 
		&__image-box
			width 38px
			height 38px
			margin 0 auto
			overflow hidden
			border 3px solid #f00
			border-radius 100%			
			box-shadow inset 0px 0px 35px rgba(255, 0, 0, 0.6)
			.kinds 
				&__image
					margin -2px
		&__title 
			color #f72c36
		&__item
			&.active
				&:before
					background-position -98px -202px
.collapse
	&__content
		height 0
		overflow hidden
	&.active
		.collapse
			&__content
				height auto
			&__title
				&:after
					border-bottom 5px solid #fff
					border-top 0
				&.red
					&:after
						border-bottom 5px solid #f72c36
						border-top 0
